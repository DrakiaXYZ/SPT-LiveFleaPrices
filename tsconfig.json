{
    "compilerOptions": {
        "allowJs": true,
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "tmp",
        "baseUrl": ".",
        "paths": {
            "@spt/*": ["./types/*"],
        }
    },
    "include": [
        "src/*",
        "src/**/*"
    ]
}